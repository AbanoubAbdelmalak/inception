<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Appenders>
    <Console name="ConsoleAppender" target="SYSTEM_OUT">
      <!--SHORT PATTERN -->
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %level{length=5} [$${ctx:username:-SYSTEM}] %logger{1} - %msg%n" />
      <!--ROBUST PATTERN
        <PatternLayout pattern="%d{ISO8601} %level{length=5} [%thread] %logger - %msg%n"/> -->
    </Console>

    <Routing name="ProjectAppender">
      <Routes pattern="$${ctx:projectId}">
        <!--
          This route is used when we do *not* have a project ID set, i.e. the variable reference
          "${ctx:projectId}" is not resolved and remains as the plain string "${ctx:projectId}"
        -->
        <Route key="${ctx:projectId}">
          <!-- 
            Do not log anywhere if there is no project ID. In this case logging is going only to
            the console.
           -->
          <Null name="null"/>
        </Route>

        <!-- 
          This route is used when we have a project ID set (i.e. in case the key is not
          "${ctx:projectId}")
        -->
        <Route>
          <File name="Project-${ctx:projectId}"
            fileName="${ctx:repositoryPath}/project/project-${ctx:projectId}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [${ctx:username}] %msg%n" />
          </File>
        </Route>
      </Routes>
    </Routing>
  </Appenders>

  <Loggers>
    <Logger name="de.tudarmstadt" level="INFO"/>
    <Logger name="de.tudarmstadt.ukp.clarin.webanno.ui.core.login.LoginPage" level="DEBUG"/>
    <Logger name="de.tudarmstadt.ukp.clarin.webanno.ui.core.settings.ProjectSettingsPanelRegistryServiceImpl" level="DEBUG"/>
    <Logger name="de.tudarmstadt.ukp.clarin.webanno.ui.core.menu.MenuItemServiceImpl" level="DEBUG"/>
    <Logger name="de.tudarmstadt.ukp.clarin.webanno.ui.annotation.detail.AnnotationDetailEditorPanel" level="TRACE"/>
    
    <!--
    <Logger name="org.apache.wicket" level="DEBUG"/>
    <Logger name="org.apache.wicket.resource.loader.ComponentStringResourceLoader" level="WARN" />
    <Logger name="org.apache.wicket.Localizer" level="WARN" />
    <Logger name="org.apache.wicket.core.util.resource.locator.ResourceStreamLocator" level="WARN" />
    <Logger name="org.apache.wicket.Component" level="WARN"/>
    <Logger name="org.apache.wicket.MarkupContainer" level="WARN" />
    <Logger name="org.apache.wicket.markup" level="WARN" />
    -->
    
    <!-- Logger name="org.springframework.boot.web.servlet.ServletContextInitializerBeans" level="DEBUG"/ -->
    <Logger name="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" level="ERROR"/>
    <Logger name="org.springframework.beans.factory.config.PropertiesFactoryBean" level="ERROR"/>
    
    <Root level="WARN">
      <AppenderRef ref="ConsoleAppender" />
      <AppenderRef ref="ProjectAppender" />
    </Root>
  </Loggers>
</Configuration>
